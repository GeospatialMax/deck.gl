{
  "description": "CartoSQLLayer declarative example",
  "initialViewState": {
    "latitude": 0,
    "longitude": 0,
    "zoom": 1,
    "pitch": 0,
    "bearing": 0
  },
  "views": [
    {
      "@@type": "MapView",
      "controller": true,
      "mapStyle": "https://basemaps.cartocdn.com/gl/positron-gl-style/style.json"
    }
  ],
  "layers": [
    {
      "@@type": "CartoSQLLayer",
      "data": "SELECT the_geom_webmercator, gn_pop FROM populated_places",
      "credentials": {
        "username": "public",
        "apiKey": "default_public"
      },
      "getLineColor": [255, 255, 255],
      "getFillColor": {
        "@@function": "ColorBins",
        "prop": "properties.gn_pop",
        "breaks": [0, 10000, 100000],
        "colors": [[255, 238, 204], [255, 221, 154], [225, 83, 131], [130, 23, 59]]
      },
      "pointRadiusMinPixels": 5,
      "lineWidthMinPixels": 1
    }
  ]
}
