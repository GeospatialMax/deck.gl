{
  "description": "CartoSQLLayer declarative example",
  "initialViewState": {
    "latitude": 0,
    "longitude": 0,
    "zoom": 1,
    "pitch": 0,
    "bearing": 0
  },
  "views": [
    {
      "@@type": "MapView",
      "controller": true,
      "mapStyle": "https://basemaps.cartocdn.com/gl/positron-gl-style/style.json"
    }
  ],
  "layers": [
    {
      "@@type": "CartoSQLLayer",
      "data": "SELECT the_geom_webmercator, type FROM ne_10m_airports",
      "credentials": {
        "username": "public",
        "apiKey": "default_public"
      },
      "getLineColor": [255, 255, 255],
      "getFillColor": {
        "@@function": "ColorCategories",
        "prop": "properties.type",
        "categories": ["mid", "major", "military mid", "mid and military"],
        "colors": "Vivid",
        "nullColor": [255, 255, 255]
      },
      "pointRadiusMinPixels": 5,
      "lineWidthMinPixels": 1
    }
  ]
}

